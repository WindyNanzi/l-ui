{
  "compilerOptions": { // 打包模块类型
    "target": "ES6", // 支持 es6, commonjs 模块
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"], // jsx 不转
    "noLib": false, // 允许没有导出的模块中导入
    "experimentalDecorators": true,
    "module": "ESNext", // 删除注释
    "moduleResolution": "Node", // 强制区分大小写
    "resolveJsonModule": true, // 解析 json 模块
    "strict": true, // 默认不要声明文件
    "noImplicitAny": true,
    "declaration": false, // 支持类型不标准可以默认 any
    "removeComments": true, // 不处理类库
    "sourceMap": true, // 编译时用的库
    "allowSyntheticDefaultImports": true, // 按照 node 模块来解析
    "esModuleInterop": true, // 装饰器语法
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true // 跳过类库检测
  },
  "exclude": [ // 排除哪些文件夹
    "node_modules",
    "**/__tests__",
    "dist/**",
    "~icons/uiw/**"
  ]
}
